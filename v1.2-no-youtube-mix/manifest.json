{
  "manifest_version": 3,
  "name": "No YouTube Mix (De-Fluffer)",
  "version": "1.2.0",
  "description": "Removes YouTube mix/auto-radio parameters so you only get the single video.",
  "permissions": ["declarativeNetRequest", "webNavigation", "tabs"],
  "host_permissions": ["*://*.youtube.com/*", "*://youtu.be/*"],
  "background": { "service_worker": "background.js" },
  "declarative_net_request": {
    "rule_resources": [
      { "id": "ruleset_1", "enabled": true, "path": "rules.json" }
    ]
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
